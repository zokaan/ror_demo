<style>
  .flash {
    height: 40px;
    border: 2px solid red;
    color: red;
    line-height: 40px;
    margin-bottom: 20px;
    width: 400px;
  }
</style>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render partial: 'shared/page_heading', locals: { text: 'Products page' } %>

    <%= render 'shared/page_heading', text: "Products count #{@products_count}" %>

    <%= render 'shared/test' %>

    <% unless flash[:notice].nil? %>
      <div class="flash"><%= flash[:notice] %></div>
    <% end %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th><%= link_to 'Price', products_path(sort: true), remote: true %></th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="products">
        <!-- Products partial templates -->
        <%= render partial: 'product', collection: @products %>
      </tbody>
    </table>

  </div>
</div>

